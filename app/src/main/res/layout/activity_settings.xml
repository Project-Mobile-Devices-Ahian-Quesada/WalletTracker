<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#0F172A"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configuración"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"/>

        <!-- Cambiar moneda -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moneda"
            android:textSize="18sp"
            android:textColor="#94A3B8"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/radioGroupCurrency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton android:id="@+id/rbCRC" android:text="₡ Colones costarricenses" android:textColor="#FFFFFF"/>
            <RadioButton android:id="@+id/rbUSD" android:text="$ Dólares estadounidenses" android:textColor="#FFFFFF"/>
            <RadioButton android:id="@+id/rbEUR" android:text="€ Euros" android:textColor="#FFFFFF"/>
        </RadioGroup>

        <!-- Cambiar saldo actual -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nuevo saldo actual"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_marginTop="32dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNewBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUpdateBalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Actualizar saldo"
            app:backgroundTint="#4ADE80"
            android:layout_marginTop="16dp"/>

        <!-- Borrar todos los datos -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDeleteAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Borrar todos los gastos"
            app:backgroundTint="#EF4444"
            android:layout_marginTop="40dp"/>
    </LinearLayout>
</layout>